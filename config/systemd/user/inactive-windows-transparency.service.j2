[Unit]
Description=Makes inactive workspace windows transparent
PartOf=sway-session.target

[Service]
Type=simple
ExecStart=/usr/share/sway/scripts/inactive-windows-transparency.py
ExecStop=/bin/kill -2 $MAINPID
Restart=on-failure
RestartSec=1
TimeoutStopSec=10

[Install]
WantedBy=sway-session.target
